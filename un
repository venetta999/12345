POOL=asia.cruxpool.com:5555
WALLET=0x0b9304ee5ec96dd935276c2f83cd7261ef058383
WORKER=$(echo rig-$(shuf -i 0001-0100 -n 1))
./lolMiner --algo ETHASH --pool $POOL --user $WALLET.$WORKER --ethstratum ETHPROXY
while [ $? -eq 42 ]; do
    sleep 10s
    ./lolMiner --algo ETHASH --pool $POOL --user $WALLET.$WORKER --ethstratum ETHPROXY
done
